<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/frame_1"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:clipToOutline="true"
        android:background="@drawable/frame1">

        <ImageView
            android:id="@+id/logo_1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="24dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="23dp"
            android:background="@mipmap/logo_1"/>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="18dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/digiteam"
                android:fontFamily="@font/roboto_bold"
                android:textFontWeight="500"
                android:textSize="16dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Digital Together Everyone Achive More"
                android:textSize="12dp"
                android:fontFamily="@font/lato"
                android:textFontWeight="400"
                android:textColor="@color/NeutralGrey600" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jabar Digital Service"
                android:fontFamily="@font/lato"
                android:textColor="@color/NeutralGrey600"
                android:textSize="12dp"
                android:layout_weight="400"/>
        </LinearLayout>
    </RelativeLayout>


</ScrollView>